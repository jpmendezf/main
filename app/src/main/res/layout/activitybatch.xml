<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_curve_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loginTv"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/back_ui"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="vertical">

            <com.pixelnx.eacademy.utils.widgets.CustomTextBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_12sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <com.pixelnx.eacademy.utils.widgets.CustomTextBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/OurCourses"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>



        <ImageView
            android:id="@+id/noResultIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/noresults"
            android:visibility="gone" />
        <com.pixelnx.eacademy.utils.widgets.CustomSmallText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/refreshTextView"
            android:padding="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/zm_ic_refresh"
            android:visibility="gone"
            android:textSize="@dimen/_13sdp"
            android:text="@string/Try_again_server_issue"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <com.pixelnx.eacademy.utils.widgets.CustomTextBold

        android:id="@+id/loginTv"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/back_shade_designmain"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:text="@string/LOGIN"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout>