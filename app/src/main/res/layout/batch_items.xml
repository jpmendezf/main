<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_252sdp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_12sdp"
        android:padding="@dimen/_6sdp">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/back_counthome"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_315sdp">

                <ImageView
                    android:id="@+id/ivBatch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:src="@drawable/noimage" />

                <com.pixelnx.eacademy.utils.widgets.CustomTextBold
                    android:id="@+id/tvOffer"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="-15dp"
                    android:background="@drawable/back_shade_designmain"
                    android:gravity="center"

                    android:text="@string/OFFER"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:id="@+id/llPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal">




                    <com.pixelnx.eacademy.utils.widgets.CustomTextBold
                        android:id="@+id/tvOfferPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_12sdp" />
                    <com.pixelnx.eacademy.utils.widgets.CustomSmallText
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <com.pixelnx.eacademy.utils.widgets.CustomSmallText
                    android:id="@+id/batchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llPrice"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13sdp" />

                <com.pixelnx.eacademy.utils.widgets.CustomSmallText
                    android:id="@+id/batchSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batchTitle"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/btLogin"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:elevation="@dimen/_6sdp">

            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_75sdp"
                android:src="@drawable/backbutton" />

            <com.pixelnx.eacademy.utils.widgets.CustomSmallText
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/btnBuyNow"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/BuyNow"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>